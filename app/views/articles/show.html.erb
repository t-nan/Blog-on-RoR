<div class="container">

<h4> About this article </h4>

<p>
<%= @article.title %>
</p>

<p>
<%= @article.text %>
</p>

<small>

Created at : <%= @article.created_at.to_date.strftime ("%d ,%B %Y") %> </br>

Updated at : <%= @article.updated_at.to_date.strftime ("%d ,%B %Y") %> </br>

</small>

</div>


<div class="container">

<br><h4>Add comment</h4>

<%if @error %>
	<div class="alert alert-danger"><%=@error.join(",")%></div>
<% end %>

<%= form_for ([@article,@article.comments.build]) do |f| %>

<div class="form-group">
	<%= f.label :author %>
	<%= f.text_field :author, class: "form-control" %>
</div>

<div class="form-group">
	<%= f.label :body %>
	<%= f.text_area :body, class: "form-control" %>
</div>

<p>
	<%= f.submit 'Save comment',class: "btn btn-outline-success" %></br>
	
</p>

<% end %>

</div>


<div class="container">

<br><h4> Comments to article: </h4>


<% @article.comments.each do |comment| %> </br>

<%= comment.author %> </br>

<%= comment.body %> </br>

<% end %>

</div>


